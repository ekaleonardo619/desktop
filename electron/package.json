{
  "name": "juleb-desktop",
  "version": "1.0.6",
  "description": "A brdige for the web built by Juleb team",
  "main": "./build/index.js",
  "scripts": {
    "build": "tsc",
    "deploy": "electron-builder build --mac --win --publish always",
    "electron:start": "npm run build && electron ./",
    "electron:pack": "npm run build && electron-builder build --dir",
    "electron:build-windows": "npm run build && electron-builder build --windows --publish always",
    "electron:build-mac": "npm run build && electron-builder build --mac --publish always"
  },
  "dependencies": {
    "@capacitor-community/electron": "^1.3.1",
    "@juleb/capacitor": "^0.0.28",
    "@types/node": "^12.20.7",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "electron-is-dev": "^1.2.0",
    "electron-log": "^4.4.1",
    "electron-updater": "^4.3.9",
    "express": "^4.17.1",
    "node-cron": "^3.0.0"
  },
  "devDependencies": {
    "builder": "^5.0.0",
    "electron": "~10.3.1",
    "electron-builder": "^22.9.1",
    "typescript": "~4.0.5"
  },
  "keywords": [
    "capacitor",
    "electron"
  ],
  "author": "",
  "license": "MIT",
  "build": {
    "appId": "com.juleb.desktop",
    "productName": "Juleb Desktop",
    "publish": {
      "provider": "s3",
      "bucket": "juleb-desktop-updates"
    },
    "files": [
      "assets/*",
      "build/*",
      "preloader.js",
      "plugins/*",
      "capacitor.config.json",
      "app/**"
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "icon.png"
    },
    "win": {
      "target": "nsis",
      "icon": "favicon.ico"
    }
  }
}
